<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        style="@style/MusicLibraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_playlist"
        app:layout_constraintEnd_toEndOf="@+id/emptyPlaylistsImage"
        app:layout_constraintStart_toStartOf="@+id/emptyPlaylistsImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_24"/>

    <ImageView
        android:id="@+id/emptyPlaylistsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginTop="@dimen/margin_46"
        app:srcCompat="@drawable/empty_search" />

    <TextView
        android:id="@+id/emptyPlaylistsText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text= "@string/empty_playlists_library"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="@+id/emptyPlaylistsImage"
        app:layout_constraintStart_toStartOf="@+id/emptyPlaylistsImage"
        app:layout_constraintTop_toBottomOf="@+id/emptyPlaylistsImage"
        style="@style/MusicLibraryText"

        />

</androidx.constraintlayout.widget.ConstraintLayout>