<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/over_activity_background"
    android:orientation="vertical"
    tools:context=".activitys.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="@string/search"
        app:titleTextAppearance="@style/ToolbarAppearance" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:background="@drawable/edit_text_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_14"
            android:src="@drawable/search_icon_a" />

        <EditText
            android:id="@+id/queryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/none"
            android:fontFamily="@font/ys_display"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_36"
            android:paddingEnd="@dimen/padding_12"
            android:singleLine="true"
            android:textColor="?attr/search_activity_edit_text_font_color"
            android:textColorHint="?attr/search_activity_edit_text_hint_font_color"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/text_19" />

        <ImageView
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="@color/none"
            android:paddingStart="@dimen/padding_12"
            android:paddingEnd="@dimen/padding_12"
            android:src="@drawable/close_icon"
            android:visibility="gone" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_12">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/none"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/emptySearchImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/error_image_top"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/empty_search" />

        <TextView
            android:id="@+id/emptySearchText"
            style="@style/ErrorTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/error_text_top"
            android:text="@string/empty_search"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emptySearchImage" />

        <ImageView
            android:id="@+id/internetErrorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/error_image_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/internet_error"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/internetErrorText"
            style="@style/ErrorTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/internet_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/internetErrorImage"
            android:visibility="gone"/>

        <Button
            android:id="@+id/updateButton"
            style="@style/UpdateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/internetErrorText"
            app:layout_constraintStart_toStartOf="@+id/internetErrorText"
            app:layout_constraintTop_toBottomOf="@+id/internetErrorText"
            android:text="@string/update"
            android:visibility="gone"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>