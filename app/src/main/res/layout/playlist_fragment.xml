<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".musicLibrary.presentation.ui.PlaylistFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray">

        <ImageButton
            android:id="@+id/playlist_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@color/none"
            android:src="@drawable/toolbar_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toTopOf="@+id/playlist_name"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_back_button" />

        <TextView
            android:id="@+id/playlist_name"
            style="@style/PlaylistNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_24"
            android:text="Name"
            app:layout_constraintBottom_toTopOf="@+id/playlist_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_image" />

        <TextView
            android:id="@+id/playlist_description"
            style="@style/PlaylistOverInformationStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="8dp"
            android:text="Description"
            app:layout_constraintBottom_toTopOf="@+id/tracks_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_name" />

        <TextView
            android:id="@+id/tracks_time"
            style="@style/PlaylistOverInformationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:text="Time"
            app:layout_constraintBottom_toTopOf="@+id/playlist_share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_description" />

        <ImageView
            android:id="@+id/seporater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_circle"
            app:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tracks_time"
            app:layout_constraintStart_toEndOf="@id/tracks_time"
            app:layout_constraintTop_toTopOf="@id/tracks_time" />

        <TextView
            android:id="@+id/tracks_in_playlist_count"
            style="@style/PlaylistOverInformationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="count"
            app:layout_constraintBottom_toBottomOf="@id/tracks_time"
            app:layout_constraintStart_toEndOf="@id/seporater"
            app:layout_constraintTop_toTopOf="@id/tracks_time" />

        <ImageButton
            android:id="@+id/playlist_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="290dp"
            android:background="@color/none"
            android:src="@drawable/share_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tracks_time"
            app:layout_constraintVertical_chainStyle="spread"/>

        <ImageButton
            android:id="@+id/add_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:background="@color/none"
            android:src="@drawable/dotes"
            app:layout_constraintStart_toEndOf="@id/playlist_share"
            app:layout_constraintTop_toTopOf="@id/playlist_share" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/playlist_tracks_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:backgroundTint="?attr/over_activity_background"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        app:behavior_peekHeight="266dp"
        app:behavior_hideable="false"
        android:visibility="visible"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_gravity="center"
            android:background="@drawable/handle"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_in_playlist_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_24"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/playlist_empty_tracks_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_search"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_16"/>

        <TextView
            android:id="@+id/playlist_empty_playlists_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/no_tracks_added"
            android:gravity="center"
            style="@style/PlaylistAddMenuPlaylistName"
            />

    </LinearLayout>

    <View android:id="@+id/playlist_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#991A1B22"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_menu_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/over_activity_background"
        android:background="@drawable/bottom_sheet_background"
        app:behavior_hideable="true"
        app:behavior_peekHeight="383dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:visibility="visible"
        android:clickable="true"
        >

        <View
            android:id="@+id/add_menu_handle"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/handle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/add_menu_playlist_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_13"
            android:layout_marginTop="@dimen/margin_8"
            android:src="@drawable/placeholder"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_menu_handle" />

        <TextView
            android:id="@+id/add_menu_playlist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginStart="@dimen/margin_8"
            android:text="add menu playlist name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_menu_playlist_image"
            app:layout_constraintTop_toTopOf="@+id/add_menu_playlist_image"
            style="@style/PlaylistAddMenuPlaylistName"/>

        <TextView
            android:id="@+id/add_menu_tracks_count"
            android:layout_width="0dp"
            android:text="67"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/add_menu_playlist_name"
            app:layout_constraintTop_toBottomOf="@id/add_menu_playlist_name"
            app:layout_constraintBottom_toBottomOf="@id/add_menu_playlist_image"
            android:layout_marginBottom="@dimen/margin_6"
            style="@style/PlaylistAddMenuCountText"/>

        <TextView
            android:id="@+id/add_menu_share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/none"
            android:text="@string/share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_menu_playlist_image"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_36"
            style="@style/PlaylistAddMenuPlaylistName"
           />

        <TextView
            android:id="@+id/add_menu_edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/none"
            android:text="@string/edit_information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_menu_share_button"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_36"
            style="@style/PlaylistAddMenuPlaylistName"/>

        <TextView
            android:id="@+id/add_menu_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_36"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@color/none"
            android:text="@string/delete_playlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_menu_edit_button"
            style="@style/PlaylistAddMenuPlaylistName"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>