<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:backgroundTint">?attr/main_activity_button_background</item>
        <item name="android:textColor">?attr/main_activity_button_text</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_8</item>
        <item name="iconTint">?attr/main_activity_icon_tint</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/main_padding_16</item>
        <item name="android:layout_marginEnd">@dimen/main_padding_16</item>
    </style>

    <style name="SettingsActivityButton">
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:backgroundTint">?attr/settings_activity_button_background</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">@dimen/main_padding_16</item>
        <item name="android:paddingEnd">@dimen/main_padding_16</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">?attr/settings_activity_icon_tint</item>
    </style>

    <style name="MySwitch123" parent="Theme.AppCompat">
        <item name="android:padding">@dimen/main_padding_16</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:colorForeground">?attr/settings_activity_icon_tint</item>
        <item name="colorControlActivated">?attr/settings_activity_switch_on</item>
        <item name="colorSwitchThumbNormal">?attr/settings_activity_icon_tint</item>
    </style>

    <style name="ToolbarAppearance">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:background">?attr/over_activity_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <style name="MainActivityToolbar">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">?attr/main_activity_title_text</item>
        <item name="android:background">?attr/main_activity_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">?attr/bottom_nav_background</item>
        <item name="itemTextColor">@drawable/icon_color</item>
        <item name="itemIconTint">@drawable/icon_color</item>
        <item name="fontFamily">@font/ys_display</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="MainText">
        <item name="android:fontFamily">@font/ys_display</item>
    </style>

    <style name="TrackNameText" parent="MainText">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_6</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackAnotherText" parent="MainText">
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">?attr/search_activity_another_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchActivitySecondaryTextStyle" parent="MainText">
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
        <item name="android:layout_marginStart">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AudioPlayerTrackNameStyle" parent="MainText">
        <item name="android:textColor">?attr/audio_player_main_text_color</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AudioPlayerArtistNameStyle" parent="MainText">
        <item name="android:textColor">?attr/audio_player_main_text_color</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AudioPlayerLeftTextStyle" parent="MainText">
        <item name="android:textColor">?attr/audio_player_secondary_text_color</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AudioPlayerRightTextStyle" parent="MainText">
        <item name="android:textColor">?attr/audio_player_main_text_color</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlaylistViewText" parent="MainText">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">?attr/playlist_view_text_color</item>
    </style>
    
    <style name="BottomSheetText" parent="MainText">
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">?attr/playlist_view_text_color</item>
    </style>

    <style name="PlaylistsNamePlayerText" parent="MainText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/playlist_player_name_color</item>
    </style>

    <style name="PlaylistsCountPlayerText" parent="MainText">
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">?attr/playlist_player_count_color</item>
    </style>

    <style name="ToastTextStyle" parent="MainText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">?attr/toast_text_color</item>
    </style>

    <style name="PlaylistNameStyle" parent="MainText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistOverInformationStyle" parent="MainText">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistAddMenuPlaylistName" parent="MainText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/playlist_add_menu_text</item>
    </style>

    <style name="PlaylistAddMenuCountText" parent="MainText">
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">?attr/playlist_add_menu_count_text</item>
    </style>

    <style name="SearchActivitySecondaryButton">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:backgroundTint">?attr/search_activity_secondary_buttons_background
        </item>
        <item name="android:textColor">?attr/search_activity_secondary_buttons_text_color</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="cornerRadius">@dimen/button_corner_radius_big</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MusicLibraryText" parent="MainText">
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">?attr/music_library_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MusicLibraryButton">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:backgroundTint">?attr/music_library_button_background</item>
        <item name="android:textColor">?attr/music_library_button_text_color</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="cornerRadius">@dimen/button_corner_radius_big</item>
    </style>

    <style name="MusicLibraryTabLayoutStyle">
        <item name="android:background">?attr/music_library_tab_background</item>
        <item name="tabTextColor">?attr/music_library_tab_text_color</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="tabIndicatorColor">?attr/music_library_tab_text_color</item>
    </style>

    <style name="NewPlaylistTextInputLayoutStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColorHint">?attr/new_playlist_fragment_hint_color_normal</item>
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="hintTextColor">?attr/new_playlist_fragment_hint_color_active</item>
        <item name="cursorColor">?attr/new_playlist_fragment_hint_color_active</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="NewPlaylistButton">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="AlertDialogButtons" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/ButtonText</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonText</item>
    </style>
    
    <style name="ButtonText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/none</item>
    </style>
</resources>