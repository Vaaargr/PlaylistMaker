<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:backgroundTint">?attr/main_activity_button_background</item>
        <item name="android:textColor">?attr/main_activity_button_text</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/main_activity_icon_tint</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/main_padding</item>
        <item name="android:layout_marginEnd">@dimen/main_padding</item>
    </style>

    <style name="SettingsActivityButton" >
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:backgroundTint">?attr/settings_activity_button_background</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">@dimen/main_padding</item>
        <item name="android:paddingEnd">@dimen/main_padding</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">?attr/settings_activity_icon_tint</item>
    </style>

    <style name="MySwitch123" parent="Theme.AppCompat" >
        <item name="android:padding">@dimen/main_padding</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:colorForeground">?attr/settings_activity_icon_tint</item>
        <item name="colorControlActivated">?attr/settings_activity_switch_on</item>
        <item name="colorSwitchThumbNormal">?attr/settings_activity_icon_tint</item>
    </style>

    <style name="ToolbarAppearance" >
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:background">?attr/over_activity_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="MainActivityToolbar">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">?attr/main_activity_title_text</item>
        <item name="android:background">?attr/main_activity_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="TrackNameText">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">?attr/settings_activity_button_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackAnotherText">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">?attr/search_activity_another_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>